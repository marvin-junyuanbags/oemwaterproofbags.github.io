<svg width="1200" height="600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="heroGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#34495e;stop-opacity:0.9" />
      <stop offset="100%" style="stop-color:#2c3e50;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="overlayGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#3498db;stop-opacity:0.1" />
      <stop offset="100%" style="stop-color:#2980b9;stop-opacity:0.2" />
    </linearGradient>
    <radialGradient id="spotlightGrad" cx="30%" cy="40%" r="60%">
      <stop offset="0%" style="stop-color:#ffffff;stop-opacity:0.1" />
      <stop offset="100%" style="stop-color:#ffffff;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Base background -->
  <rect width="1200" height="600" fill="url(#heroGrad)"/>
  
  <!-- Overlay gradient -->
  <rect width="1200" height="600" fill="url(#overlayGrad)"/>
  
  <!-- Spotlight effect -->
  <rect width="1200" height="600" fill="url(#spotlightGrad)"/>
  
  <!-- Abstract geometric shapes -->
  <g opacity="0.1">
    <!-- Large circles -->
    <circle cx="200" cy="150" r="80" fill="#3498db"/>
    <circle cx="1000" cy="400" r="120" fill="#27ae60"/>
    <circle cx="800" cy="100" r="60" fill="#e74c3c"/>
    
    <!-- Triangular shapes -->
    <polygon points="100,500 200,400 300,500" fill="#f39c12" opacity="0.5"/>
    <polygon points="900,200 1000,100 1100,200" fill="#9b59b6" opacity="0.5"/>
    
    <!-- Rectangular elements -->
    <rect x="400" y="450" width="200" height="100" rx="10" fill="#1abc9c" opacity="0.3"/>
    <rect x="600" y="50" width="150" height="80" rx="8" fill="#e67e22" opacity="0.3"/>
  </g>
  
  <!-- Waterproof bag silhouettes -->
  <g opacity="0.15" fill="#ecf0f1">
    <!-- Backpack silhouette 1 -->
    <g transform="translate(150,250)">
      <rect x="0" y="0" width="60" height="80" rx="8" fill="#bdc3c7"/>
      <rect x="5" y="5" width="50" height="70" rx="6" fill="#95a5a6"/>
      <ellipse cx="30" cy="-5" rx="15" ry="8" fill="#95a5a6"/>
      <rect x="15" y="20" width="30" height="20" rx="3" fill="#7f8c8d"/>
      <rect x="20" y="50" width="20" height="15" rx="2" fill="#7f8c8d"/>
    </g>
    
    <!-- Dry bag silhouette -->
    <g transform="translate(950,200)">
      <ellipse cx="25" cy="40" rx="25" ry="40" fill="#bdc3c7"/>
      <rect x="15" y="0" width="20" height="15" rx="10" fill="#95a5a6"/>
      <circle cx="25" cy="7" r="3" fill="#7f8c8d"/>
    </g>
    
    <!-- Laptop bag silhouette -->
    <g transform="translate(700,350)">
      <rect x="0" y="0" width="80" height="60" rx="5" fill="#bdc3c7"/>
      <rect x="5" y="5" width="70" height="50" rx="3" fill="#95a5a6"/>
      <rect x="10" y="15" width="60" height="30" rx="2" fill="#7f8c8d"/>
      <ellipse cx="40" cy="-5" rx="20" ry="6" fill="#95a5a6"/>
    </g>
  </g>
  
  <!-- Water droplet effects -->
  <g opacity="0.3">
    <circle cx="300" cy="100" r="3" fill="#3498db"/>
    <circle cx="500" cy="200" r="2" fill="#3498db"/>
    <circle cx="750" cy="150" r="4" fill="#3498db"/>
    <circle cx="400" cy="350" r="2.5" fill="#3498db"/>
    <circle cx="850" cy="450" r="3.5" fill="#3498db"/>
    <circle cx="200" cy="400" r="2" fill="#3498db"/>
    <circle cx="1000" cy="250" r="3" fill="#3498db"/>
  </g>
  
  <!-- Subtle grid pattern -->
  <g stroke="#ffffff" stroke-width="0.5" opacity="0.05" fill="none">
    <defs>
      <pattern id="grid" width="50" height="50" patternUnits="userSpaceOnUse">
        <path d="M 50 0 L 0 0 0 50" fill="none" stroke="#ffffff" stroke-width="0.5"/>
      </pattern>
    </defs>
    <rect width="1200" height="600" fill="url(#grid)"/>
  </g>
  
  <!-- Floating particles -->
  <g opacity="0.2">
    <circle cx="100" cy="80" r="1" fill="#f1c40f"/>
    <circle cx="300" cy="50" r="1.5" fill="#e74c3c"/>
    <circle cx="600" cy="120" r="1" fill="#27ae60"/>
    <circle cx="900" cy="90" r="1.2" fill="#9b59b6"/>
    <circle cx="1100" cy="160" r="1" fill="#1abc9c"/>
    <circle cx="150" cy="500" r="1.3" fill="#f39c12"/>
    <circle cx="450" cy="550" r="1" fill="#e67e22"/>
    <circle cx="750" cy="520" r="1.5" fill="#3498db"/>
    <circle cx="1050" cy="480" r="1.1" fill="#2ecc71"/>
  </g>
  
  <!-- Subtle wave pattern at bottom -->
  <path d="M 0 500 Q 300 480 600 500 T 1200 500 L 1200 600 L 0 600 Z" fill="#2c3e50" opacity="0.3"/>
  <path d="M 0 520 Q 400 500 800 520 T 1200 520 L 1200 600 L 0 600 Z" fill="#34495e" opacity="0.2"/>
</svg>