<svg width="400" height="300" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2c3e50;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#34495e;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="bagGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#e74c3c;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#c0392b;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="strapGrad" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#34495e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#2c3e50;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="400" height="300" fill="url(#bgGrad)"/>
  
  <!-- Mountain silhouette -->
  <polygon points="0,200 80,120 160,140 240,100 320,130 400,110 400,300 0,300" fill="#1a252f" opacity="0.6"/>
  
  <!-- Backpack main body -->
  <ellipse cx="200" cy="180" rx="60" ry="80" fill="url(#bagGrad)"/>
  <rect x="140" y="120" width="120" height="120" rx="15" fill="url(#bagGrad)"/>
  
  <!-- Backpack details -->
  <rect x="150" y="130" width="100" height="15" rx="7" fill="#2c3e50"/>
  <rect x="160" y="160" width="80" height="40" rx="5" fill="#34495e" opacity="0.8"/>
  <circle cx="180" cy="180" r="3" fill="#95a5a6"/>
  <circle cx="220" cy="180" r="3" fill="#95a5a6"/>
  
  <!-- Straps -->
  <rect x="120" y="140" width="12" height="100" rx="6" fill="url(#strapGrad)"/>
  <rect x="268" y="140" width="12" height="100" rx="6" fill="url(#strapGrad)"/>
  
  <!-- Top handle -->
  <ellipse cx="200" cy="115" rx="20" ry="8" fill="none" stroke="#34495e" stroke-width="6"/>
  
  <!-- Waterproof zipper -->
  <rect x="170" y="125" width="60" height="3" fill="#f39c12"/>
  <circle cx="175" cy="126.5" r="2" fill="#e67e22"/>
  
  <!-- Water droplets -->
  <circle cx="120" cy="80" r="3" fill="#3498db" opacity="0.8"/>
  <circle cx="280" cy="90" r="2" fill="#3498db" opacity="0.8"/>
  <circle cx="320" cy="70" r="2.5" fill="#3498db" opacity="0.8"/>
  <circle cx="100" cy="100" r="2" fill="#3498db" opacity="0.8"/>
  
  <!-- Text overlay -->
  <text x="200" y="270" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="16" font-weight="bold">WATERPROOF BACKPACK</text>
  <text x="200" y="285" text-anchor="middle" fill="#bdc3c7" font-family="Arial, sans-serif" font-size="12">Adventure Ready</text>
</svg>